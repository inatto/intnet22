<wpf:GeneralWindow x:Class="intnet22.lib.associate.AssociateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:general="clr-namespace:intnet22.lib.general"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:templates="clr-namespace:intnet22.lib.associate.templates"
        xmlns:wpf="clr-namespace:intnet22.lib.general.wpf"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="ThreeDBorderWindow"
        Title="Associado" Width="900" Height="700" Padding="0"
        KeyDown="Window_KeyDown" >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="0,0,0,50">

        <TabControl BorderThickness="1" Padding="0" Background="#eeeeee">

            <!-- Dados pessoais -->
            <TabItem>

                <TabItem.Header>
                    <StackPanel>
                        <Image Style="{StaticResource ImageStyle}" Name="ImgPessoal" />
                        <TextBlock Text="Dados pessoais" FontSize="12" />
                    </StackPanel>
                </TabItem.Header>


                <StackPanel Margin="20">

                    <Label Style="{StaticResource CaptionStyle}" Content="Principal" />
                    <WrapPanel Margin="0,10,0,0"></WrapPanel>
                    <StackPanel Orientation="Horizontal">

                        <WrapPanel Style="{StaticResource WrapStyle}">
                            <Label Style="{StaticResource LabelStyle}" Content="CPF" />
                            <xctk:MaskedTextBox Style="{StaticResource TextBoxStyle}" x:Name="TextCpf" Mask="000\.000\.000-00" />
                        </WrapPanel>

                        <WrapPanel Margin="20,0,0,0"></WrapPanel>
                        <WrapPanel Style="{StaticResource WrapStyle}">
                            <Label Style="{StaticResource LabelStyle}" Content="Sexo" />
                            <ComboBox Style="{StaticResource ComboStyle}" x:Name="ComboSexo" />
                        </WrapPanel>

                        <WrapPanel Margin="20,0,0,0"></WrapPanel>
                        <WrapPanel Style="{StaticResource WrapStyle}">
                            <Label Style="{StaticResource LabelStyle}" Content="Estado civil" />
                            <ComboBox Style="{StaticResource ComboStyle}" x:Name="ComboEstadoCivil" Width="220" />
                        </WrapPanel>


                        <WrapPanel Margin="20,0,0,0"></WrapPanel>
                        <WrapPanel Style="{StaticResource WrapStyle}">
                            <Label Style="{StaticResource LabelStyle}" Content="Nascimento" />
                            <xctk:MaskedTextBox Style="{StaticResource TextBoxStyle}" x:Name="MaskDataNascimento" Mask="00/00/0000" />
                        </WrapPanel>

                        <WrapPanel Margin="20,0,0,0"></WrapPanel>
                        <WrapPanel Style="{StaticResource WrapStyle}">
                            <Label Style="{StaticResource LabelStyle}" Content="Data do óbito" />
                            <xctk:MaskedTextBox Style="{StaticResource TextBoxStyle}" x:Name="MaskDataObito" Mask="00/00/0000" />
                        </WrapPanel>

                        <WrapPanel Margin="20,0,0,0"></WrapPanel>
                        <WrapPanel Style="{StaticResource WrapStyle}">
                            <Label Style="{StaticResource LabelStyle}" Content="Falecido" />
                            <CheckBox Style="{StaticResource CheckStyle}" x:Name="CheckFalecido" />
                        </WrapPanel>



                    </StackPanel>

                    <WrapPanel Margin="0,10,0,0"></WrapPanel>
                    <StackPanel Orientation="Horizontal">

                        <WrapPanel Style="{StaticResource WrapStyle}">
                            <Label Style="{StaticResource LabelStyle}" Content="Nome completo" />
                            <TextBox Style="{StaticResource TextBoxStyle}" x:Name="TextNome" Width="340" />
                        </WrapPanel>

                        <WrapPanel Margin="20,0,0,0"></WrapPanel>
                        <WrapPanel Style="{StaticResource WrapStyle}">
                            <Label Style="{StaticResource LabelStyle}" Content="E-mail principal" />
                            <TextBox Style="{StaticResource TextBoxStyle}" x:Name="TextEmailPrincipal" Width="340" />
                        </WrapPanel>
                        <!-- <WrapPanel Margin="20,0,0,0"></WrapPanel> -->
                        <!-- <WrapPanel Style="{StaticResource WrapStyle}"> -->
                            <!-- <Label Style="{StaticResource LabelStyle}" Content="Apelido" /> -->
                            <!-- <TextBox Style="{StaticResource TextBoxStyle}" x:Name="TextApelido" Width="260" /> -->
                        <!-- </WrapPanel> -->

                    </StackPanel>


                    <WrapPanel Margin="0,10,0,0"></WrapPanel>
                    <WrapPanel Margin="0,10,0,0"></WrapPanel>
                    <Label Style="{StaticResource CaptionStyle}" Content="Telefones" />

                    <WrapPanel Margin="0,10,0,0"></WrapPanel>
                    <StackPanel Orientation="Horizontal">

                        <WrapPanel Style="{StaticResource WrapStyle}">
                            <Label Style="{StaticResource LabelStyle}" Content="Celular principal" />
                            <xctk:MaskedTextBox Style="{StaticResource TextBoxStyle}" x:Name="MaskCelularPrincipal" Mask="(00) 90000-0000" Width="120" />
                        </WrapPanel>

                        <WrapPanel Margin="20,0,0,0"></WrapPanel>
                        <WrapPanel Style="{StaticResource WrapStyle}">
                            <Label Style="{StaticResource LabelStyle}" Content="Celular comercial" />
                            <xctk:MaskedTextBox Style="{StaticResource TextBoxStyle}" x:Name="MaskCelularComercial" Mask="(00) 90000-0000" Width="120" />
                        </WrapPanel>

                    </StackPanel>

                    <WrapPanel Margin="0,10,0,0"></WrapPanel>
